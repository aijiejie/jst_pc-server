<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <!--    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">-->
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/iconfont.css">
    <link rel="stylesheet" href="/css/detail_teacher.css">
    <title>京师堂|讲师详情</title>
</head>
<body>
<!--顶部菜单部分-->
<div id="menu">
    <h1 class="logo">
        <a href="">
            <img src="../assets/images/logo.png" alt="">
        </a>
    </h1>
    <ul>
        <% for (var i = 0; i < menus.length; i++) { %>
            <li><a href="<%= menus[i].url %>"><%= menus[i].title %></a></li>
        <% } %>
    </ul>

    <div class="search_box">
        <label for="target"></label>
        <input type="text" value="" id="target" placeholder="javascript">
        <span class="iconfont" id="search">&#xe60c;</span>
    </div>
</div>

<!--教师简介-->
<div id="top_teacher">
    <img src="../assets/images/logo4.png" alt="">
    <div id="top_title">
        京师堂—<%= tInfo.teacher_name %>
    </div>
    <div id="top_shortTitle">
        <%= tInfo.teacher_intro %>
    </div>
</div>

<!--导航部分-->
<div id="nav_panel">
    <div class="top">
        <p>
            <a href="/teachers">讲师列表</a>
            <span class="ali-iconfont">&#xe60a;</span>
            <a href="#"><%= tInfo.teacher_name %></a>
        </p>
    </div>
</div>

<div id="teacher_introduction">
    <div id="intro_title">
        <span class="main_title">讲师介绍</span>
    </div>
    <div class="center">
        <div class="left">
            <img src="<%= tInfo.teacher_avatar %>" alt=" ">
        </div>
        <div class="right">
            <h4><%= tInfo.teacher_name %></h4>
            <% if(tInfo.is_star === 1){ %>
                <span class="title_star">星级讲师</span>
            <% } %>
            <!--<p><%= tInfo.teacher_intro %></p>-->
            <span class="detail_intro"><%= tInfo.teacher_detail_intro %></span>
        </div>
    </div>
</div>

<div class="shadow-down"></div>

<!--推荐课程列表-->
<div id="courses">
    <div class="content">
        <div class="title">
            <span class="main_title">推荐课程</span>
            <!--            <span class="more">-->
            <!--                <a class="iconfont more_right" href="/courses">查看更多&#xe63c;</a>-->
            <!--            </span>-->
        </div>

        <div class="list">
            <ul>
                <% for(let i = 0;i < cInfo.length;i++){ %>
                <li>
                    <a href="/detail_course/<%= cInfo[i].id %>">
                        <img src="<%= cInfo[i].course_img %>" alt="">
                        <div class="course_title"><%= cInfo[i].course_title %></div>
                        <div class="ins"><%= cInfo[i].course_intro %></div>
                        <% if(i < Score.length){ %>
                        <div class="score">
                            <div class="box">
                                <i class="star_gray"></i>
                                <i class="star_yel" style="width:<%= Score[i].avgScore/5*100 %>%"></i>
                            </div>
                            <span class="point"><%= Score[i].avgScore %>分</span>
                        </div>
                        <% } else {%>
                            <div class="score">
                                <div class="box">
                                    <i class="star_gray"></i>

                                </div>
                                <span class="point">暂无评分</span>
                            </div>
                        <%}%>
                        <div class="price">免费</div>
                    </a>
                </li>
                <% } %>
            </ul>
        </div>
    </div>
</div>

<!--底部-->
<div id="bottom">
    <ul>
        <li><a href="#">贡献名单</a></li>
        <li><a href="#">联系我们</a></li>
        <li><a href="#">友情链接</a></li>
        <li><a href="#">帮助中心</a></li>
    </ul>
    <span class="copyright">Copyright © 2019 中国联通北京分公司. All Rights Reserved.</span>
</div>
</body>
</html>